  <div class="innercontainer metad">
    <div class="dialog">
      <h1>Metadatos modelo <em><% @species_name ? "" : @species_name %></em></h1>
      <% if @metadata %>
        <p><b>ID del Modelo: </b><%= @metadata[0]["modelID"] %></p>
        <p><b>Número de registros: </b><%= @records_number %></p>
        <p><b>Fecha desarrollo: </b><%= @metadata[0]["yyyy"].blank? ? "NA" : @metadata[0]["yyyy"] %>-<%= @metadata[0]["mm"].blank? ? "NA": @metadata[0]["mm"] %>-<%= @metadata[0]["dd"].blank? ? "NA" : @metadata[0]["dd"] %></p>

        <h2>Info</h2>
        <div class="infocontent">
        <h3>Método <b><%= map_method_name(@metadata[0]["modelingMethod"]) %></b></h3>
        <h3>Umbral <b><%= @metadata[0]["thresholdType"] %></b></h3>
        <h3>Tipo validación <b><%= @metadata[0]["validationType"] %></b></h3>
        <h3><%= @metadata[0]["perfStatType"] %> <b><%= @metadata[0]["perfStatValue"] %></b></h3>
        <h3>Nivel <b><%= map_level_name(@metadata[0]["modelLevel"]) %></b></h3>
        <h3>Documentación <b><%= @metadata[0]["methodFile"].blank? ? "NA" : link_to(@metadata[0]["methodFile"], @metadata[0]["methodFile"]) %></b></h3>
        </div>

        <h2>Cita</h2>
        <blockquote>
        <p><%=  @metadata[0]["modelAuthors"] %>. <%= @metadata[0]["yyyy"].blank? ? "NA" : @metadata[0]["yyyy"] %>. Modelo de distribución de <em>Aburria aburri</em> ID <%= @metadata[0]["modelID"] %>. Laboratorio de Biogeografía Aplicada. Instituto Alexander von Humboldt.</p><div class="overf"><a href="http://biomodelos.humboldt.org.co/">http://betabiomodelos.humboldt.org.co/models/visor?species_id=<%= @metadata[0]["taxID"] %></a>.</div>
        </blockquote>
      <% end %>


      <h2>Contacto</h2>

      <p>BioModelos - Laboratorio de Biogeografía Aplicada
      <a href="mailto:biomodelos@humboldt.org.co" class="overf">biomodelos@humboldt.org.co</a></p>
    </div>
  </div>