var $box;
<% if user_signed_in? %>
	if(<%= params[:box] %> == 1)
		$box = $('.termbox');
	else
		$box = $('.termbox2');

	$box.html('<%=j render partial: 'models/terms_and_conditions' %>');
	$("#acepto-btn").click(function(e){
		if($("#download_terminos").is(':checked') && $("input:radio[name ='download[model_use_id]']").is(':checked'))
		{
			$box.hide();
		}
		else{
			e.preventDefault();
			alertify.alert("<%= t('biomodelos.models.download.selection_notice') %>");
		}
		
	});
	$("#cancelo-trm-btn").click(function(e){
		e.preventDefault();
		$box.hide();
	});
	$box.show('slow');
<% else %>
	alertify.alert("<%= t('biomodelos.models.download.sign_up_notice') %>");
<% end %>