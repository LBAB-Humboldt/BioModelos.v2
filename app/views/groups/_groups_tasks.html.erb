<h1 class="tasks">tareas</h1> 
<div class="newtask" ng-click="taskbox=!taskbox" rel="tooltip" title="Agregar nueva tarea"><%= image_tag("newtask.png") %></div>
<div class="clearfix"></div>
<div class="addtask" ng-show="taskbox">
	<p>Agregar nueva tarea</p>
			<select name="" id="Filtrousuario_task">
				<option value="hide">- Buscar Usuario -</option>
				<% @group_members.each do |member| %>
					<option value=<%= member.user_id %>><%= member.user.name %></option>
				<% end %>
			</select>
			<select name="" id="Filtroespecie_task">
				<option value="hide">- Buscar Especie -</option>
				<% @group_species.each do |species| %>
					<option value=<%= species[1] %>><%= species[0] %></option>
				<% end %>
			</select>
			<div id="chkBoxTask">
				<input type="checkbox" name="regvalid" checked></input>
				<label for="visualrep" class="lblvisual">Curar registros</label>
				<input type="checkbox" name="editvalid" checked></input>
				<label for="visualedit" class="lblvisual">Edici贸n modelo</label>
			<button class="btngen" id="addNewTask">Agregar</button>
			</div>
</div>
<div class="clearfix"></div>
		<div class="colspp tabletit">
			<h2>Especie</h2>
		</div><!-- 
