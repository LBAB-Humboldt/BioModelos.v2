			<%= image_tag("aprobicon.png") %>
		</div><!-- 
	 --><div class="coladv tabletit specialicon">
			<h3>%Avance</h3>
			<%= image_tag("percicon.png") %>
		</div>
	<% @species_with_tasks.each_with_index do |species, i| %>
		<div class="tareaspp"><!-- 
		--><div class="colspp"><a><%= species[0] %></a><button ng-click="expertlist<%= i %>=!expertlist<%= i %>" class="arrrowsm" arrow></button></a></div><!-- 
