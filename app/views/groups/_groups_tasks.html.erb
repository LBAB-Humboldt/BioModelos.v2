		--><p class="coladv">50%</p>
		</div>
		<div ng-show="expertlist<%= i %>">
			<% @tasks.select{|x| x.species_id == species[1]}.each do |task| %>
				<div class="userspp"><!--
				--><a class="colspp"><%= task.user.name %></a><!-- 
				--><div class="coladv">
				<% if task.task_type_id == 1 && task.task_state_id == 2 %>
