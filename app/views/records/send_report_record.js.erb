function _refreshSpeciesRecordsReport(){
	$.post( "/records/edit_record", { species_id: $("#species_id_field").val()}).done(function(data) {
  			_BioModelosVisorModule.getSpeciesRecords($("#species_id_field").val(), data);
  	});
}

$.ajax({
	type: 'POST',
	url: "/records/new_report",
	data:{
		recordId: "<%= params[:point_comment][:recordId] %>",
		reportedUserId: <%= current_user.id %>,
		reportedOriginVagrant: <%= params[:point_comment][:isOutlier] %>,
		reportedGeoIssueBm: <%= params[:point_comment][:geoIssue] %>,
		reportedIdIssueBm: <%= params[:point_comment][:idIssue] %>,
		reportedOldTaxonomyBm: <%= params[:point_comment][:oldTaxonomy] %>,
		reportedOriginIntroduced: <%= params[:point_comment][:inCaptivity] %>,
		reportedOtherIssuesBm: <%= params[:point_comment][:otherIssues] %>,
		reportedCommentsBm: "<%= params[:point_comment][:comment] %>"
	},
	success: function(){
		_refreshSpeciesRecordsReport();
		alertify.alert("<%= t('biomodelos.records.report.success_notice') %>");
		$('.reportBox').html("");
	},
	error: function(jqXHR, textStatus, errorThrown){
		alertify.alert("<%= t('biomodelos.records.report.error_notice') %>" + errorThrown);
	}
});
