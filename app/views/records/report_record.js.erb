$(".reportBox").html(""); //Clear div before rendering again
<% if user_signed_in? %>
	$(".reportBox").html('<%=j render partial: 'records/report_record', locals: { :point_comment => @point_comment } %>');
	$("#point_comment_recordId").val($("#bm_db_id").val());
	/* Cancel button */
	$("#cancel-point-cmt").click(function(e){
		e.preventDefault();
		$(".reportBox").html("");
	});
<% else %>
	alertify.alert("<%= t('biomodelos.records.report.sign_up_notice') %>");
<% end %>
