@media only screen and (min-width : 320px) {

/* footer */

	.humbname,
	.sitemap img {
		display: none;
	}

	footer nav {
		margin-right: 0;
	}

}

@media only screen and (min-width : 680px) {

/* footer */

	.sitemap img {
		display: inline-block;
	}

	footer nav {
		margin-right: 20px;
	}

}

@media only screen and (min-width : 1024px) {

/* footer */

	.humbname {
		display: inline-block;
	}

}