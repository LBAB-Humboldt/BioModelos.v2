* {
	margin:0;
	padding:0;
}

html {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  height: 100%;
}

*, *:before, *:after {
  -webkit-box-sizing: inherit;
  -moz-box-sizing: inherit;
  box-sizing: inherit;
  }

*:focus {
    outline: 0;
}

a {
	text-decoration: none;
	color: #db3f2a;
	font-weight: 300;
	cursor: pointer;
}

img {
	border: 0;
}

body {
    font: 14px/24px 'Lato', sans-serif;
    font-size: 1em; 
    line-height: 1.2;
    background-color: #f2f2f2;
    height: 100%;
}

.clearfix:after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0;
	}
.clearfix { display: inline-block; }

/* header */

header {
	width: 100%;
	background-color: #1b3337;
	padding: 12px 34px;
	display: flex;
    justify-content: space-between;
    position: relative;
    z-index: 5;
}

header h1 {
	font-size: 1.9em;
	color: #fff;
	letter-spacing: 1px;
	font-weight: 400;
}

header nav {
	margin-top: 6px;
}

header nav li {
	list-style: none;
	display: inline-block;
	*display: inline;
	*zoom: 1;;
}

header nav li a {
	text-transform: uppercase;
	padding: 15px;
	color: #fff;
	margin-left: 10px;
	font-size: 0.75em;
	letter-spacing: 1px;
}

header nav a:hover {
	color: #18b4b1;
}

.current {
	border: solid 1px #fff;
	color: #18b4b1;
}

.toggle-nav {
	display: none;
}

/* footer */

footer {
	width: 100%;
	background-color: #393836;
	padding: 20px 34px 15px;
	display: flex;
    justify-content: space-between;
    position: static;
    bottom: 0;
    height: 130px;
}

.humboldtft img, 
.humbname {
	display: inline-block;
	*display: inline;
	*zoom: 1;
	margin-right: 10px;
}

.humbname h1 {
	font-size: 12px;
	color: #fff;
	font-weight: 400;
	margin-bottom: 20px;
	font-size: 0.87em;
	letter-spacing: 0.5px;
}

.humbname h2 {
	font-size: 11px;
	color: #fff;
	font-weight: 400;
	font-size: 0.8em;
}

footer nav ul, footer nav {
	display: inline-block;
	*display: inline;
	*zoom: 1;
	vertical-align: top;
}

footer ul:nth-child(2) {
	border-right: solid #75746f 1px;
}
footer ul:nth-child(even) {
	border-left: solid #75746f 1px;
}

footer li {
	list-style: none;
	padding: 0 15px;
	text-transform: uppercase;
	font-size: 0.8em;
	line-height: 1.8;
}	

footer li a {
	color: #18b4b1;
}

.smallnavli {
	color: #fff;
	text-transform: none;
}


/* container */

.innercontainer {
	width: 100%;
	min-height: -moz-calc(100% - 190px);
	min-height: -webkit-calc(100% - 190px);
	min-height: calc(100% - 190px);
	z-index: 2000;
	padding-bottom: 30px;
}

.container {
	margin: 0 auto;
}

/*home*/

