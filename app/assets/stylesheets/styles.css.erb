* {
	margin:0;
	padding:0;
}

html {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  height: 100%;
}

*, *:before, *:after {
  -webkit-box-sizing: inherit;
  -moz-box-sizing: inherit;
  box-sizing: inherit;
  }

*:focus {
    outline: 0 none;
}

a {
	text-decoration: none;
	color: #db3f2a;
	font-weight: 300;
	cursor: pointer;
}

img {
	border: 0;
}

body {
    font: 14px/24px 'Lato', sans-serif;
    font-size: 1em; 
    line-height: 1.2;
    background-color: #f2f2f2;
    height: 100%;
}


.clearfix:before,
.clearfix:after {
    content: " "; /* 1 */
    display: table; /* 2 */
}

.clearfix:after {
	clear: both;
	}

.clearfix { *zoom:1;}

