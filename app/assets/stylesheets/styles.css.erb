* {
	margin:0;
	padding:0;
}

html {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

*, *:before, *:after {
  -webkit-box-sizing: inherit;
  -moz-box-sizing: inherit;
  box-sizing: inherit;
  }

*:focus {
    outline: 0;
}

a {
	text-decoration: none;
	color: #db3f2a;
	font-weight: 300;
}

img {
	border: 0;
}

body {
    font: 14px/24px 'Lato', sans-serif;
    font-size: 1em; 
    line-height: 1.2;
    background-color: #f2f2f2;
}

.clearfix:after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0;
	}
.clearfix { display: inline-block; }

/* header */

header {
	width: 100%;
	background-color: #1b3337;
	padding: 12px 34px;
	display: flex;
    justify-content: space-between;
}

header h1 {
	font-size: 1.9em;
	color: #fff;
	letter-spacing: 1px;
	font-weight: 400;
}

header nav {
	margin-top: 6px;
}

header nav a {
	text-transform: uppercase;
	padding: 15px;
	color: #fff;
	margin-left: 10px;
	font-size: 0.75em;
	letter-spacing: 1px;
}

header nav a:hover {
	color: #18b4b1;
}

.current {
	border: solid 1px #fff;
	color: #18b4b1;
}

/* footer */

footer {
	width: 100%;
	background-color: #393836;
	padding: 20px 34px 15px;
	display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
}

.humboldtft img, 
.humbname {
	display: inline-block;
	*display: inline;
	*zoom: 1;
	margin-right: 10px;
}

.humbname h1 {
	font-size: 12px;
	color: #fff;
	font-weight: 400;
	margin-bottom: 20px;
	font-size: 0.87em;
	letter-spacing: 0.5px;
}

.humbname h2 {
	font-size: 11px;
	color: #fff;
	font-weight: 400;
	font-size: 0.8em;
}

footer nav ul, footer nav {
	display: inline-block;
	*display: inline;
	*zoom: 1;
	vertical-align: top;
}

footer ul:nth-child(2) {
	border-right: solid #75746f 1px;
}
footer ul:nth-child(even) {
	border-left: solid #75746f 1px;
}

footer li {
	list-style: none;
	padding: 0 15px;
	text-transform: uppercase;
	font-size: 0.8em;
	line-height: 1.8;
}	

footer li a {
	color: #18b4b1;
}

.smallnavli {
	color: #fff;
	text-transform: none;
}

footer nav {
	margin-right: 20px;
}

/* container */

.fullcontainer {
	position: absolute;
	width: 100%;
	height: -moz-calc(100% - 187px);
	height: -webkit-calc(100% - 187px);
	height: calc(100% - 187px);
	overflow: auto;
}

.container {
	margin: 0 auto;
}

/*home*/

.homeline {
	height: 54%;
	background-image: url(<%= asset_path 'grillo.jpg' %>);
    background-repeat: no-repeat;
  	background-size: cover;
  	background-position: center;
}

.homec {
	width: 700px;
	position: relative;
	top: 35%;
	transform: translateY(-35%);
}

.homeline form {
	margin: 0 auto;
	width: 700px;
	padding: 5px;
	background-color: #fff;
}

.homeline input[type=text] {
	width: -moz-calc(100% - 50px);
	width: -webkit-calc(100% - 50px);
	width: calc(100% - 50px);
	padding: 7px;
	padding-left: 10px;
	border: none;
	font-weight: 300;
	font-style: italic;
	color: #393836;
	font-size: 0.87em;
	line-height: 2;
	border-right: solid 2px #db3f2a;
}

.searchbtnhome {
	border: none;
	height: 42px;
	width: 46px;
	cursor: pointer;
	background-color: #fff;
	vertical-align: top;
	background-image: url(<%= asset_path 'searchome.png' %>);
}

.hlink {
	display: flex;
    justify-content: space-between;
}

.hlink a {
	color: #fff;
	font-size: 0.8em;
	padding: 5px 0;
	font-weight: 400;
}

.hlbtn {
	text-align: center;
}

.hlbtn a {
	padding: 5px 10px;
	text-align: center;
	width: 130px;
	background-color: #fff;
	display: inline-block;
	margin: 12px 14px 0 14px;
}

.fullcontainer h1 {
	font-weight: 300;
	letter-spacing: 1px;
	color: #db3f2a;
	text-transform: uppercase;
	text-align: center;
	padding: 6px 0;
	font-size: 1.75em;
}
