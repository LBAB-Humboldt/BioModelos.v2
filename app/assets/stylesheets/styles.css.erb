* {
	margin:0;
	padding:0;
}

html {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

*, *:before, *:after {
  -webkit-box-sizing: inherit;
  -moz-box-sizing: inherit;
  box-sizing: inherit;
  }

*:focus {
    outline: 0;
}

a {
	text-decoration: none;
	color: #db3f2a;
	font-weight: 300;
}

body {
    font: 14px/24px 'Lato', sans-serif;
    font-size: 1em; 
    line-height: 1.2;
}

/* header */

header {
	width: 100%;
	background-color: #1b3337;
	padding: 12px 34px;
	display: flex;
    justify-content: space-between;
}

header h1 {
	font-size: 1.9em;
	color: #fff;
	letter-spacing: 1px;
	font-weight: 400;
}

header nav {
	margin-top: 6px;
}

header nav a {
	text-transform: uppercase;
	padding: 15px;
	color: #fff;
	margin-left: 10px;
	font-size: 0.75em;
	letter-spacing: 1px;
}

header nav a:hover {
	color: #18b4b1;
}

.current {
	border: solid 1px #fff;
	color: #18b4b1;
}

/* footer */

footer {
	width: 100%;
	background-color: #393836;
	padding: 12px 34px;
	display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
}

.humboldtft img, 
.humbname {
	display: inline-block;
	*display: inline;
	*zoom: 1;
	margin-right: 10px;

}

.humbname h1 {
	font-size: 12px;
	vertical-align: text-top;
	color: #fff;
	font-weight: 400;
}

.humbname h2 {
	font-size: 11px;
	vertical-align: text-bottom;
	color: #fff;
	font-weight: 400;
}
